@using BasicInsurance.Models.Models;
@model Undewritingcase

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 et-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Case</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3" row p-1>
            <label asp-for="ApplicantName"></label>
            <input asp-for="ApplicantName" disabled class="form-control" />
        </div>
        <div class="mb-3" row p-1>
            <label asp-for="Policytype"></label>
            <input asp-for="Policytype" disabled class="form-control" />
            
        </div>
        <div class="mb-3" row p-1>
            <label asp-for="RiskDescription"></label>
            <input asp-for="RiskDescription" disabled class="form-control" />

        </div>
        <div class="row">
            <div class="col-6" col-md-3>
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6" col-md-3>
                <a asp-controller="Case" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>

    </div>

</form>
