@using BasicInsurance.Models.Models;
@model List<Annuity>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Contract List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Annuity" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Contract
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Contract Name
                </th>
                <th>
                    Principal Amount
                </th>
                <th>
                    Intrest Rate
                </th>
                <th>
                    Number of Payments
                </th>
                <th>
                    Payment Frequency
                </th>
                <th>
                    Payment Amount
                </th>
            </tr>
            
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.PrincipalAmount))
            {
                <tr>
                    <td>@obj.ContractName</td>
                    <td>@obj.PrincipalAmount</td>
                    <td>@obj.IntrestRate</td>
                    <td>@obj.NumberofPayments</td>
                    <td>@obj.PaymentFrequency</td>
                    <td>@obj.PaymentAmount</td>
                    <td>
                         <div class="btn-group" role="group">
                            <a asp-controller="Annuity" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Annuity" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
